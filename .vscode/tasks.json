{
	"version": "2.0.0",
	"tasks": [
		{
		  "label": "Build Extension in Background",
		  "group": "build",
		  "type": "npm",
		  "script": "watch",
		  "path": "ide/",
		  "problemMatcher": {
			"base": "$tsc-watch",
			"fileLocation": ["relative", "${workspaceFolder}/ide/"]
		  },
		  "isBackground": true,
		},
		{
		  "label": "Build Extension",
		  "group": "build",
		  "type": "npm",
		  "script": "build",
		  "path": "ide/",
		  "problemMatcher": {
			"base": "$tsc",
			"fileLocation": ["relative", "${workspaceFolder}/ide/"]
		  },
		},
	]
}